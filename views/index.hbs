<div class="container">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="col s11 input-field">
                    <input type="text" class="validate" name="burger" id="burger">
                    <label for="burger">Burger</label>
                </div>
                <div class="col s1 input-field">
                    <button class="btn-large">
                        <i class="material-icons">
                            add
                        </i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div id="uneaten" class="col s4">
            {{#each burgers}}
            {{#unless eaten}}
            <div class="row card-panel">
                <p>
                    Burger: {{name}}
                </p>
                <p>
                    Eaten: No
                </p>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col s4"></div>
        <div id="eaten" class="col s4">
            {{#each burgers}}
            {{#if eaten}}
            <div class="row card-panel">
                <p>Burger: {{name}}</p>
                <p>Eaten: Yes</p>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
</div>